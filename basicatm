package patikaproje;
import java.util.Scanner;
public class Atmprojesi {


public static void main(String[] args) {
	Scanner scanner=new Scanner(System.in);
	System.out.println("Lütfen şifre giriniz");
	int dogrus=1234;
	int hak=3;
	int bakiye=2000;
	int select;
	
	while(hak>0) {
		int sifre=scanner.nextInt();
	if(sifre==dogrus) {
		System.out.println("giriş yapılıyor");
	
   do {
	 System.out.println("1-Para yatırma\n" +
             "2-Para Çekme\n" +
             "3-Bakiye Sorgula\n" +
             "4-Çıkış Yap");
     System.out.print("Lütfen yapmak istediğiniz işlemi seçiniz : ");
 	select=scanner.nextInt();
 	
		switch(select) {
		case 1:
			System.out.print("Ne kadar yatırmak istiyorsunuz");
			int tutar=scanner.nextInt();
			bakiye +=tutar;
			System.out.println("yeni bakiyeniz" +bakiye);
			break;
			
		case 2:
			System.out.print("Ne kadar çekmek istiyorsunuz");
			int cekme=scanner.nextInt();
			bakiye-=cekme;
			System.out.println("yeni bakiyeniz" +bakiye);
break;
		case 3 :
			System.out.println("Bakiyeniz:"+bakiye);
			break;
		case 4 :
			System.out.println("sistemden çıkılıyor");
                        break;
                 default:
                         System.out.println("Geçersiz işlem numarası");
                       break;
		}
   }
           	  while(select!=4);
             		break;
		
		}else {
	hak--;
	if(hak>0) {
		System.out.println("yanlış girdiniz.Şu kadar hak kaldı:"+hak);
	}else {
		 System.out.println("Hakkınız kalmadı. Hesabınız bloke olmuştur.");
	}
}
}
   scanner.close();
   }}
